{
  "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    "types": ["@ipfs-shipyard/pinning-service-client", "node"]
  },
  "include": [
    "types",
    "test", // remove this line if you don't want to type-check tests
    "src",
    "src/global.d.ts",
    "generated/*.json"
  ],
  "ts-node": {
      "transpileOnly": true
  }
}
